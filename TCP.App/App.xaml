<Application x:Class="TCP.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TCP.App"
             StartupUri="Shell/MainWindow.xaml">
    <Application.Resources>
        <!--
            Application.Resources - Uygulama genelinde kullanÄ±lacak kaynaklar
            
            TCP-0.8.1 Hotfix-2: Startup Safe Resources
            
            IMPORTANT: Theme dictionaries are NOT loaded here.
            They are loaded AFTER MainWindow is shown (in Loaded event).
            
            This prevents StaticResource resolution failures at startup.
            
            Only safe base resources are defined here:
            - System font (Segoe UI)
            - Basic fallback colors
            - No design tokens (FontFamily, Spacing, Radius, IconSize, etc.)
        -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--
                    TCP-0.8.1-HOTFIX: SafeDefaults MUST be loaded first
                    This prevents StaticResource resolution failures at startup
                -->
                <ResourceDictionary Source="pack://application:,,,/TCP.Theming;component/Themes/SafeDefaults.xaml"/>
                
                <!--
                    TCP-0.8.2: Force Dark Theme Only
                    Dark theme dictionary is loaded directly at startup
                    No Light theme, no theme switching
                -->
                <ResourceDictionary Source="pack://application:,,,/TCP.Theming;component/Themes/Variants/Theme.Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

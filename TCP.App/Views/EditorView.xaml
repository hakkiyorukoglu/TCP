<UserControl x:Class="TCP.App.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TCP.App.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource Brush.Background.Primary}">
    <!--
        EditorView.xaml - Editor modülü view
        
        TCP-1.0.1: Editor Foundation (Empty Scene)
        
        Layout:
        - TopBar: Shell'den geliyor (MainWindow TopBar)
        - Content area: Empty canvas/surface (future rendering area)
        - StatusBar: Bottom status bar with status text and version
        
        MVVM Pattern: Sadece UI, hiçbir mantık içermez.
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Content area (empty canvas) -->
            <RowDefinition Height="*"/>
            <!-- StatusBar -->
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        
        <!-- Content area - Empty canvas for future rendering -->
        <Grid Grid.Row="0">
            <Border x:Name="EditorSurface"
                    Background="{DynamicResource Brush.Background.Secondary}"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="0"
                    Focusable="True">
                <!-- TCP-1.0.3: EditorInputRouter - Focusable for keyboard input -->
                <!-- Empty canvas area - ready for future rendering -->
                <!-- TCP-1.0.1: No tools, no drawing, just empty space -->
            </Border>
            <!-- TCP-1.0.2: Origin crosshair overlay (debug) -->
            <!-- Origin crosshair will be added via code-behind -->
        </Grid>
        
        <!-- StatusBar - TCP-1.0.1: Editor Foundation (Empty Scene) -->
        <!-- TCP-1.0.2: ViewportState - Added zoom and cursor world coords display -->
        <!-- TCP-1.0.3: EditorInputRouter - Added input debug display -->
        <Border Grid.Row="1"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,1,0,0">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status text -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusText, Mode=OneWay, FallbackValue='Editor ready'}"
                           FontSize="{DynamicResource Font.Caption}"
                           FontFamily="{DynamicResource Font.Primary}"
                           Foreground="{DynamicResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"/>
                
                <!-- Input debug display - TCP-1.0.3: EditorInputRouter -->
                <TextBlock Grid.Column="1"
                           Text="{Binding InputDebugDisplay, Mode=OneWay, FallbackValue='Input: Routed'}"
                           FontSize="{DynamicResource Font.Caption}"
                           FontFamily="{DynamicResource Font.Primary}"
                           Foreground="{DynamicResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
                
                <!-- Zoom display - TCP-1.0.2: ViewportState, TCP-1.0.4: Live zoom display -->
                <TextBlock Grid.Column="2"
                           Text="{Binding ZoomDisplay, Mode=OneWay, FallbackValue='Zoom: 100%'}"
                           FontSize="{DynamicResource Font.Caption}"
                           FontFamily="{DynamicResource Font.Primary}"
                           Foreground="{DynamicResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
                
                <!-- Cursor world coords display - TCP-1.0.2: ViewportState -->
                <TextBlock Grid.Column="3"
                           Text="{Binding CursorWorldDisplay, Mode=OneWay, FallbackValue='X: 0.00  Y: 0.00'}"
                           FontSize="{DynamicResource Font.Caption}"
                           FontFamily="{DynamicResource Font.Primary}"
                           Foreground="{DynamicResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
                
                <!-- Version text -->
                <TextBlock Grid.Column="4"
                           Text="{Binding CurrentVersion, Mode=OneWay, FallbackValue='TCP-1.0.3'}"
                           FontSize="{DynamicResource Font.Caption}"
                           FontFamily="{DynamicResource Font.Primary}"
                           Foreground="{DynamicResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

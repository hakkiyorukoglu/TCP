<UserControl x:Class="TCP.App.Views.InfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TCP.App.ViewModels"
             xmlns:services="clr-namespace:TCP.App.Services"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource Brush.Background.Primary}">
    <!--
        InfoView.xaml - Info panel view
        
        TCP-0.9.0: Info Panel v1 + Version History UI
        
        Layout:
        - Two-column layout
        - Left: Section list (fixed width ~240)
        - Right: Content area with ScrollViewer (star width)
        - No layout jumping
        
        MVVM Pattern: Sadece UI, hiçbir mantık içermez.
    -->
    <!-- TCP-0.9.1a: DataContext is set in code-behind for safety -->
    <!-- XAML DataContext removed - InfoView.xaml.cs handles it -->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Section List - Fixed width to prevent layout jumps -->
            <ColumnDefinition Width="240"/>
            <!-- Content Container - Star width with ScrollViewer inside -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Section List (Left Panel) -->
        <Border Grid.Column="0"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Section List -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Info"
                           FontSize="{DynamicResource Font.Heading.Medium}"
                           FontFamily="{DynamicResource Font.Primary}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.Text.Primary}"
                           Margin="16,16,16,12"/>
                
                <!-- Section List - TCP-0.9.1b: Architecture section binding crash fix -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Sections, Mode=OneWay}"
                         SelectedItem="{Binding SelectedSection, Mode=TwoWay}"
                         BorderThickness="0"
                         Background="Transparent"
                         Margin="8,0,8,8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="SectionItemBorder"
                                    Background="{DynamicResource Brush.Background.Primary}"
                                    BorderBrush="{DynamicResource Brush.Border}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,4,0,0"
                                    Padding="12,10">
                                <TextBlock Text="{Binding Path=., Mode=OneWay}"
                                           FontSize="{DynamicResource Font.Body}"
                                           FontFamily="{DynamicResource Font.Primary}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource Brush.Text.Primary}"/>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter TargetName="SectionItemBorder" Property="BorderBrush" Value="{DynamicResource Brush.Accent.Primary}"/>
                                    <Setter TargetName="SectionItemBorder" Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- Content Container (Right Panel) -->
        <Border Grid.Column="1"
                Background="{DynamicResource Brush.Background.Primary}">
            <!-- ScrollViewer INSIDE content area only -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="24">
                    
                    <!-- Overview Section - TCP-0.9.1: Info panel & TXT export -->
                    <!-- TCP-0.9.1a: Info panel DataContext fix - Visibility safety -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection, Mode=OneWay}" Value="Overview">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Overview"
                                       FontSize="{DynamicResource Font.Heading.Large}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brush.Text.Primary}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text=" — "
                                       FontSize="{DynamicResource Font.Heading.Large}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,8,0"/>
                            <TextBlock Text="{Binding CurrentVersion, Mode=OneWay}"
                                       FontSize="{DynamicResource Font.Heading.Small}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brush.Accent.Primary}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- TCP-0.9.1a: OverviewText binding -->
                        <!-- TCP-0.9.1b: Architecture section binding crash fix - Mode=OneWay -->
                        <TextBlock Text="{Binding OverviewText, Mode=OneWay}"
                                   FontSize="{DynamicResource Font.Body}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   TextWrapping="Wrap"
                                   LineHeight="24"/>
                    </StackPanel>
                    
                    <!-- Architecture Section - TCP-0.9.1: Info panel & TXT export -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection}" Value="Architecture">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Architecture"
                                   FontSize="{DynamicResource Font.Heading.Large}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <!-- TCP-0.9.1b: Architecture section binding crash fix - All bindings OneWay -->
                        <ItemsControl ItemsSource="{Binding ArchitecturePoints, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Path=., Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Features Section - TCP-0.9.1: Info panel & TXT export -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection}" Value="Features">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Features"
                                   FontSize="{DynamicResource Font.Heading.Large}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="### Implemented"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,12"/>
                        <!-- TCP-0.9.1b: Architecture section binding crash fix - All bindings OneWay -->
                        <ItemsControl ItemsSource="{Binding ImplementedFeatures, Mode=OneWay}" Margin="0,0,0,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Path=., Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="### In Progress"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding InProgressFeatures, Mode=OneWay}" Margin="0,0,0,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Path=., Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="### Planned"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding PlannedFeatures, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Path=., Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Version History Section - TCP-0.9.1: Info panel & TXT export -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection}" Value="Version History">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Version History"
                                   FontSize="{DynamicResource Font.Heading.Large}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <!-- TCP-0.9.1b: Architecture section binding crash fix - All bindings OneWay -->
                        <ItemsControl ItemsSource="{Binding VersionHistory, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Brush.Surface}"
                                            BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="16,12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Version, Mode=OneWay}"
                                                           FontSize="{DynamicResource Font.Heading.Small}"
                                                           FontFamily="{DynamicResource Font.Primary}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           Margin="0,0,12,0"/>
                                                <TextBlock Text="{Binding Title, Mode=OneWay}"
                                                           FontSize="{DynamicResource Font.Heading.Small}"
                                                           FontFamily="{DynamicResource Font.Primary}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.Accent.Primary}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Description, Mode=OneWay}"
                                                       FontSize="{DynamicResource Font.Body}"
                                                       FontFamily="{DynamicResource Font.Primary}"
                                                       Foreground="{DynamicResource Brush.Text.Secondary}"
                                                       TextWrapping="Wrap"
                                                       LineHeight="20"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Roadmap Section - TCP-0.9.1: Info panel & TXT export -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection}" Value="Roadmap">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Roadmap"
                                   FontSize="{DynamicResource Font.Heading.Large}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <!-- TCP-0.9.1b: Architecture section binding crash fix - All bindings OneWay -->
                        <ItemsControl ItemsSource="{Binding RoadmapItems, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Path=., Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Cursor Section - TCP-1.0.0: UI FOUNDATION RELEASE -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSection}" Value="Cursor">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Cursor"
                                   FontSize="{DynamicResource Font.Heading.Large}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <!-- TCP-1.0.0: Cursor context text display -->
                        <Border Background="{DynamicResource Brush.Surface}"
                                BorderBrush="{DynamicResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <ScrollViewer MaxHeight="400"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding CursorContextText, Mode=OneWay}"
                                           FontSize="{DynamicResource Font.Body}"
                                           FontFamily="Consolas"
                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                           TextWrapping="Wrap"
                                           LineHeight="20"/>
                            </ScrollViewer>
                        </Border>
                        <!-- TCP-1.0.0: Export Cursor Context button -->
                        <Button Content="Export Cursor Context (TXT)"
                                Command="{Binding ExportCursorContextCommand, Mode=OneWay}"
                                HorizontalAlignment="Left"
                                Padding="16,8"
                                MinWidth="200"
                                Background="{DynamicResource Brush.Accent.Primary}"
                                Foreground="{DynamicResource Brush.Text.Primary}"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Brush.Accent.Secondary}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    
                    <!-- Export TXT Button - TCP-0.9.1: Info panel & TXT export -->
                    <Border Background="{DynamicResource Brush.Surface}"
                            BorderBrush="{DynamicResource Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16,12"
                            Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Export Documentation"
                                       FontSize="{DynamicResource Font.Heading.Small}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brush.Text.Primary}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Export all project information to a TXT file for offline reference."
                                       FontSize="{DynamicResource Font.Caption}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"/>
                            <!-- TCP-0.9.1b: Architecture section binding crash fix - Command binding OneWay -->
                            <Button Content="Export TXT"
                                    Command="{Binding ExportTxtCommand, Mode=OneWay}"
                                    HorizontalAlignment="Left"
                                    Padding="16,8"
                                    MinWidth="120"
                                    Background="{DynamicResource Brush.Accent.Primary}"
                                    Foreground="{DynamicResource Brush.Text.Primary}"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource Brush.Accent.Secondary}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

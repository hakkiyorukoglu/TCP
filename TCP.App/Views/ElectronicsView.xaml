<UserControl x:Class="TCP.App.Views.ElectronicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TCP.App.ViewModels"
             xmlns:local="clr-namespace:TCP.App"
             xmlns:components="clr-namespace:TCP.App.UI.Components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource Brush.Background.Primary}">
    <UserControl.Resources>
        <local:IsNullToVisibilityConverter x:Key="IsNullToVisibilityConverter"/>
        <local:ThicknessConverter x:Key="ThicknessConverter"/>
        <local:CornerRadiusConverter x:Key="CornerRadiusConverter"/>
    </UserControl.Resources>
    <!--
        ElectronicsView.xaml - Electronics modülü view
        
        TCP-0.5: Electronics Page Skeleton
        
        Layout: 3 panel horizontal split
        1. LEFT: Board List (fixed width ~240px)
        2. RIGHT TOP: Board Details (Card-style)
        3. RIGHT BOTTOM: Code Editor Placeholder
        
        MVVM Pattern: Sadece UI, hiçbir mantık içermez.
        Tüm data ViewModel'den gelir.
    -->
    <UserControl.DataContext>
        <viewmodels:ElectronicsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- LEFT: Board List (fixed width) -->
            <ColumnDefinition Width="240"/>
            <!-- RIGHT: Board Details + Code Editor (split vertically) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <!-- RIGHT TOP: Board Details -->
            <RowDefinition Height="*"/>
            <!-- RIGHT BOTTOM: Code Editor -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--
            LEFT PANEL - Board List
            Fixed width vertical list of electronics boards
        -->
        <Border Grid.Column="0"
                Grid.RowSpan="2"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Board List -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Boards"
                           FontSize="{StaticResource FontSizeLarge}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.Text.Primary}"
                           Margin="15,15,15,10"/>
                
                <!-- Board List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Boards}"
                         SelectedItem="{Binding SelectedBoard}"
                         BorderThickness="0"
                         Background="Transparent"
                         Margin="10,0,10,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ItemBorder"
                                    Background="{DynamicResource Brush.Background.Primary}"
                                    BorderBrush="{DynamicResource Brush.Border}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,5,0,0"
                                    Padding="10,8">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Icon placeholder -->
                                    <TextBlock Text="⚡"
                                               FontSize="{StaticResource FontSizeLarge}"
                                               Foreground="{DynamicResource Brush.Accent.Primary}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    <!-- Board name -->
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="{StaticResource FontSizeNormal}"
                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource Brush.Accent.Primary}"/>
                                    <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        <!--
            RIGHT TOP PANEL - Board Summary Cards
            TCP-0.6.0: Summary cards showing board connection details
        -->
        <Border Grid.Column="1"
                Grid.Row="0"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,0,1"
                Margin="10,10,10,5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Board Name -->
                    <TextBlock Text="{Binding SelectedBoard.Name, FallbackValue='No board selected'}"
                               FontSize="{StaticResource FontSizeTitle}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.Text.Primary}"
                               Margin="0,0,0,16"/>
                    
                    <!-- Summary Cards using reusable components -->
                    <!-- TCP-0.6.1: Using BoardDetailCard and KeyValueRow components -->
                    <StackPanel>
                        <!-- Connection Info Card -->
                        <components:BoardDetailCard Title="Connection Info"
                                                    Margin="0,0,0,12">
                            <components:BoardDetailCard.Content>
                                <StackPanel>
                                    <ItemsControl ItemsSource="{Binding SelectedBoardSummaryData}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <components:KeyValueRow Key="{Binding Key}"
                                                                        Value="{Binding Value}"
                                                                        Margin="0,0,0,8"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </components:BoardDetailCard.Content>
                        </components:BoardDetailCard>
                    </StackPanel>
                    
                    <!-- Fallback message when no board selected -->
                    <TextBlock Text="Select a board to view details"
                               FontSize="{StaticResource FontSize.M}"
                               Foreground="{DynamicResource Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,16,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedBoard}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!--
            RIGHT BOTTOM PANEL - Code Editor Panel
            TCP-0.6.2: Electronics "Edit Code" Panel UI
        -->
        <Border Grid.Column="1"
                Grid.Row="1"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,1,0,0"
                Margin="10,5,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Code Editor Panel using reusable component -->
                    <components:BoardDetailCard Title="Edit Board Code">
                        <components:BoardDetailCard.Content>
                            <components:CodeEditorPanel/>
                        </components:BoardDetailCard.Content>
                    </components:BoardDetailCard>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

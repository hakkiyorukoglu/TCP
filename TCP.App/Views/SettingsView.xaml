<UserControl x:Class="TCP.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TCP.App.ViewModels"
             xmlns:services="clr-namespace:TCP.App.Services"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource Brush.Background.Primary}">
    <!--
        SettingsView.xaml - Settings modülü view
        
        TCP-0.8.0: Settings System v1
        
        Layout:
        - Fixed-width category list (left, 220px)
        - Content area with ScrollViewer (right, star width)
        - Layout NEVER jumps or resizes
        
        MVVM Pattern: Sadece UI, hiçbir mantık içermez.
    -->
    <UserControl.DataContext>
        <viewmodels:SettingsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Category List - Fixed width to prevent layout jumps -->
            <ColumnDefinition Width="220"/>
            <!-- Content Container - Star width with ScrollViewer inside -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Category List (Left Panel) -->
        <Border Grid.Column="0"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Category List -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Settings"
                           FontSize="{DynamicResource Font.Heading.Medium}"
                           FontFamily="{DynamicResource Font.Primary}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.Text.Primary}"
                           Margin="16,16,16,12"/>
                
                <!-- Category List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         BorderThickness="0"
                         Background="Transparent"
                         Margin="8,0,8,8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="CategoryItemBorder"
                                    Background="{DynamicResource Brush.Background.Primary}"
                                    BorderBrush="{DynamicResource Brush.Border}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,4,0,0"
                                    Padding="12,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="{DynamicResource Font.Body}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource Brush.Text.Primary}"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="{DynamicResource Font.Caption}"
                                               FontFamily="{DynamicResource Font.Primary}"
                                               Foreground="{DynamicResource Brush.Text.Secondary}"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter TargetName="CategoryItemBorder" Property="BorderBrush" Value="{DynamicResource Brush.Accent.Primary}"/>
                                    <Setter TargetName="CategoryItemBorder" Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- Content Container (Right Panel) -->
        <Border Grid.Column="1"
                Background="{DynamicResource Brush.Background.Primary}">
            <!-- ScrollViewer INSIDE content area only -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="24">
                    <!-- Category Content based on SelectedCategory -->
                    <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='Select a category'}"
                               FontSize="{DynamicResource Font.Heading.Large}"
                               FontFamily="{DynamicResource Font.Primary}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.Text.Primary}"
                               Margin="0,0,0,20"/>
                    
                    <!-- Appearance Category Content -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory.Name}" Value="Appearance">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Theme"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource Brush.Surface}"
                                BorderBrush="{DynamicResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,10"
                                Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Dark (locked)"
                                           FontSize="{DynamicResource Font.Body}"
                                           FontFamily="{DynamicResource Font.Primary}"
                                           Foreground="{DynamicResource Brush.Text.Primary}"/>
                                <TextBlock Text="Theme switching is disabled in TCP-0.8.2"
                                           FontSize="{DynamicResource Font.Caption}"
                                           FontFamily="{DynamicResource Font.Primary}"
                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Accent Color"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,16,0,8"/>
                        <Border Background="{DynamicResource Brush.Surface}"
                                BorderBrush="{DynamicResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,10"
                                Margin="0,0,0,12">
                            <TextBlock Text="Default accent color"
                                       FontSize="{DynamicResource Font.Body}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Shortcuts Category Content -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory.Name}" Value="Shortcuts">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Keyboard Shortcuts"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Shortcuts List -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding Shortcuts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource Brush.Surface}"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12,10"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <!-- Command Name -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Keys -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Spacer -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Description -->
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Command Name -->
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding CommandName}"
                                                           FontSize="{DynamicResource Font.Body}"
                                                           FontFamily="{DynamicResource Font.Primary}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,16,0"/>
                                                
                                                <!-- Keys -->
                                                <Border Grid.Column="1"
                                                        Background="{DynamicResource Brush.Background.Primary}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="1"
                                                        CornerRadius="2"
                                                        Padding="6,3"
                                                        Margin="0,0,16,0">
                                                    <TextBlock Text="{Binding Keys}"
                                                               FontSize="{DynamicResource Font.Caption}"
                                                               FontFamily="Consolas"
                                                               Foreground="{DynamicResource Brush.Text.Primary}"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Description -->
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding Description}"
                                                           FontSize="{DynamicResource Font.Caption}"
                                                           FontFamily="{DynamicResource Font.Primary}"
                                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    
                    <!-- Paths Category Content -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory.Name}" Value="Paths">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Default Paths"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource Brush.Surface}"
                                BorderBrush="{DynamicResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,10"
                                Margin="0,0,0,12">
                            <TextBlock Text="Default project path: (placeholder)"
                                       FontSize="{DynamicResource Font.Body}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Performance Category Content -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory.Name}" Value="Performance">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Performance Options"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Performance options placeholder"
                                   FontSize="{DynamicResource Font.Body}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   Foreground="{DynamicResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>
                    </StackPanel>
                    
                    <!-- About Category Content -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory.Name}" Value="About">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="About"
                                   FontSize="{DynamicResource Font.Heading.Small}"
                                   FontFamily="{DynamicResource Font.Primary}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text.Primary}"
                                   Margin="0,0,0,16"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Application Name"
                                       FontSize="{DynamicResource Font.Caption}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="TCP (Train Control Platform)"
                                       FontSize="{DynamicResource Font.Body}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Primary}"
                                       Margin="0,0,0,16"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Version"
                                       FontSize="{DynamicResource Font.Caption}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{x:Static services:VersionManager.DisplayVersion}"
                                       FontSize="{DynamicResource Font.Body}"
                                       FontFamily="{DynamicResource Font.Primary}"
                                       Foreground="{DynamicResource Brush.Text.Primary}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Fallback message when no category selected -->
                    <TextBlock Text="Select a category to view settings"
                               FontSize="{DynamicResource Font.Body}"
                               FontFamily="{DynamicResource Font.Primary}"
                               Foreground="{DynamicResource Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,16,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCategory}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

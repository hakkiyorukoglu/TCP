<UserControl x:Class="TCP.App.UI.Components.BoardDetailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <!--
        BoardDetailCard.xaml - Reusable board detail card component
        
        TCP-0.6.1: Board Details Components (Reusable)
        
        Purpose: Visually group board-related information in a card-style container.
        
        Structure:
        - Header (title text)
        - Content area (ItemsPresenter for KeyValueRow list or custom content)
        
        Properties:
        - Title (string): Card header title
        - Content (object): Content to display inside card
        
        Rules:
        - Zero business logic
        - Uses ONLY theme tokens (no hardcoded values)
        - Rounded corners via CornerRadiusNormal token
        - Padding via SpacingL token
    -->
    <Border Background="{DynamicResource Brush.Background.Primary}"
            BorderBrush="{DynamicResource Brush.Border}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="16">
        <StackPanel>
            <!-- Header (Title) -->
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="{DynamicResource Font.Heading.Medium}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.Text.Primary}"
                       Margin="0,0,0,12"/>
            
            <!-- Content Area -->
            <!-- Content comes from UserControl.Content (inherited from ContentControl) -->
            <ContentPresenter/>
        </StackPanel>
    </Border>
</UserControl>

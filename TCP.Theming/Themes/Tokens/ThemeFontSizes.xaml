<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--
        ThemeFontSizes.xaml - Font Size Design Tokens
        
        TCP-0.7.0: Theme Tokens v1 (Design Tokens)
        
        Bu dosya font size token'larını içerir.
        Used everywhere: TextBlock, Button, Labels
        
        NO hardcoded font sizes in XAML views.
    -->
    
    <!--
        ========================================================================
        FONT SIZE TOKENS
        ========================================================================
    -->
    <sys:Double x:Key="FontSize.XS">10</sys:Double>
    <sys:Double x:Key="FontSize.S">11</sys:Double>
    <sys:Double x:Key="FontSize.M">13</sys:Double>
    <sys:Double x:Key="FontSize.L">16</sys:Double>
    <sys:Double x:Key="FontSize.XL">20</sys:Double>
    <sys:Double x:Key="FontSize.Title">20</sys:Double>
    
    <!--
        ========================================================================
        BACKWARD COMPATIBILITY ALIASES
        ========================================================================
    -->
    <StaticResource ResourceKey="FontSize.S" x:Key="FontSizeSmall"/>
    <StaticResource ResourceKey="FontSize.M" x:Key="FontSizeNormal"/>
    <StaticResource ResourceKey="FontSize.L" x:Key="FontSizeLarge"/>
    <StaticResource ResourceKey="FontSize.Title" x:Key="FontSizeTitle"/>
    
</ResourceDictionary>

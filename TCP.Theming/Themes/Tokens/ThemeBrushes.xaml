<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
        ThemeBrushes.xaml - Brush Design Tokens
        
        TCP-0.7.0: Theme Tokens v1 (Design Tokens)
        
        Bu dosya UI'da kullanılacak brush token'larını içerir.
        Her brush bir color token'a bağlanır.
        
        All brushes are FROZEN for performance.
        
        Brush naming convention:
        - Brush.Background.Primary
        - Brush.Background.Secondary
        - Brush.Surface
        - Brush.Border
        - Brush.Text.Primary
        - Brush.Text.Secondary
        - Brush.Accent.Primary
    -->
    
    <ResourceDictionary.MergedDictionaries>
        <!-- Önce color token'ları yükle -->
        <ResourceDictionary Source="pack://application:,,,/TCP.Theming;component/Themes/Tokens/ThemeColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!--
        ========================================================================
        BACKGROUND BRUSHES
        ========================================================================
    -->
    <SolidColorBrush x:Key="Brush.Background.Primary" 
                     Color="{StaticResource Color.Background.Primary}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Background.Secondary" 
                     Color="{StaticResource Color.Background.Secondary}"
                     x:Shared="False"/>
    
    <!--
        ========================================================================
        SURFACE BRUSHES
        ========================================================================
    -->
    <SolidColorBrush x:Key="Brush.Surface" 
                     Color="{StaticResource Color.Surface}"
                     x:Shared="False"/>
    
    <!--
        ========================================================================
        BORDER BRUSHES
        ========================================================================
    -->
    <SolidColorBrush x:Key="Brush.Border" 
                     Color="{StaticResource Color.Border}"
                     x:Shared="False"/>
    
    <!--
        ========================================================================
        TEXT BRUSHES
        ========================================================================
    -->
    <SolidColorBrush x:Key="Brush.Text.Primary" 
                     Color="{StaticResource Color.Text.Primary}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" 
                     Color="{StaticResource Color.Text.Secondary}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" 
                     Color="{StaticResource Color.Text.Disabled}"
                     x:Shared="False"/>
    
    <!--
        ========================================================================
        ACCENT BRUSHES
        ========================================================================
    -->
    <SolidColorBrush x:Key="Brush.Accent.Primary" 
                     Color="{StaticResource Color.Accent.Primary}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Accent.Secondary" 
                     Color="{StaticResource Color.Accent.Secondary}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Accent.Danger" 
                     Color="{StaticResource Color.Accent.Danger}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Accent.Success" 
                     Color="{StaticResource Color.Accent.Success}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Accent.Warning" 
                     Color="{StaticResource Color.Accent.Warning}"
                     x:Shared="False"/>
    <SolidColorBrush x:Key="Brush.Accent.Error" 
                     Color="{StaticResource Color.Accent.Error}"
                     x:Shared="False"/>
    
    <!--
        ========================================================================
        BACKWARD COMPATIBILITY ALIASES
        ========================================================================
        Eski isimlerle uyumluluk için (mevcut kod bozulmasın)
    -->
    <StaticResource ResourceKey="Brush.Background.Primary" x:Key="BackgroundPrimaryBrush"/>
    <StaticResource ResourceKey="Brush.Background.Secondary" x:Key="BackgroundSecondaryBrush"/>
    <StaticResource ResourceKey="Brush.Surface" x:Key="SurfaceBrush"/>
    <StaticResource ResourceKey="Brush.Border" x:Key="BorderBrush"/>
    <StaticResource ResourceKey="Brush.Text.Primary" x:Key="TextPrimaryBrush"/>
    <StaticResource ResourceKey="Brush.Text.Secondary" x:Key="TextSecondaryBrush"/>
    <StaticResource ResourceKey="Brush.Accent.Primary" x:Key="AccentPrimaryBrush"/>
    
</ResourceDictionary>

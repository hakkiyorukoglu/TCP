<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--
        ThemeRadius.xaml - Corner Radius Design Tokens
        
        TCP-0.7.0: Theme Tokens v1 (Design Tokens)
        
        Bu dosya corner radius token'larını içerir.
        Used for: Border.CornerRadius, Cards, Panels, Buttons
        
        Note: CornerRadius is a struct, so we define as Double and convert in XAML.
    -->
    
    <!--
        ========================================================================
        RADIUS TOKENS (as Double for XAML conversion)
        ========================================================================
    -->
    <sys:Double x:Key="Radius.None">0</sys:Double>
    <sys:Double x:Key="Radius.S">2</sys:Double>
    <sys:Double x:Key="Radius.M">4</sys:Double>
    <sys:Double x:Key="Radius.L">6</sys:Double>
    
    <!--
        ========================================================================
        BACKWARD COMPATIBILITY ALIASES
        ========================================================================
    -->
    <StaticResource ResourceKey="Radius.S" x:Key="CornerRadiusSmall"/>
    <StaticResource ResourceKey="Radius.M" x:Key="CornerRadiusNormal"/>
    
</ResourceDictionary>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--
        ThemeTokens.xaml - Tema token'ları (temel değerler)
        
        Bu dosya PROFESSIONAL, TOKEN-BASED tema sisteminin merkezidir.
        Tüm UI değerleri burada token olarak tanımlanır.
        
        Token-Based Design System:
        - Her değer semantik bir isimle tanımlanır
        - Tema variant'ları bu token'ları kullanır
        - UI'da hardcoded değer kullanılmaz
        - Scalable ve maintainable yapı
        
        Autodesk / IDE dark theme'lerden ilham alınmıştır.
    -->
    
    <!--
        ========================================================================
        COLOR TOKENS
        ========================================================================
        Renk token'ları - Tüm renkler burada tanımlanır.
        Tema variant'ları bu token'ları kullanarak brush'ları oluşturur.
    -->
    
    <!-- Arka plan renkleri -->
    <Color x:Key="BackgroundPrimary">#2B2B2B</Color>
    <Color x:Key="BackgroundSecondary">#1E1E1E</Color>
    <Color x:Key="Surface">#333333</Color>
    
    <!-- Kenarlık rengi -->
    <Color x:Key="Border">#3F3F3F</Color>
    
    <!-- Vurgu renkleri -->
    <Color x:Key="AccentPrimary">#4FC3F7</Color>
    <Color x:Key="AccentSecondary">#81D4FA</Color>
    
    <!-- Metin renkleri -->
    <Color x:Key="TextPrimary">#E6E6E6</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextDisabled">#666666</Color>
    
    <!--
        ========================================================================
        BRUSH TOKENS
        ========================================================================
        Brush token'ları - UI'da kullanılacak brush'lar.
        Bu brush'lar tema variant'larında Color token'larına bağlanır.
    -->
    
    <!-- Arka plan brush'ları -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    
    <!-- Kenarlık brush'ı -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    
    <!-- Vurgu brush'ları -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
    
    <!-- Metin brush'ları -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    
    <!--
        ========================================================================
        TYPOGRAPHY TOKENS
        ========================================================================
        Tipografi token'ları - Font ailesi ve boyutları.
    -->
    
    <!-- Font ailesi - Segoe UI modern ve okunabilir, Inter fallback -->
    <sys:String x:Key="FontFamilyPrimary">Segoe UI, Inter</sys:String>
    
    <!-- Font boyutları -->
    <sys:Double x:Key="FontSizeSmall">11</sys:Double>
    <sys:Double x:Key="FontSizeNormal">13</sys:Double>
    <sys:Double x:Key="FontSizeLarge">16</sys:Double>
    <sys:Double x:Key="FontSizeTitle">20</sys:Double>
    
    <!--
        ========================================================================
        SPACING TOKENS
        ========================================================================
        Spacing token'ları - UI elementleri arası boşluklar.
        Tutarlı spacing için kullanılır.
    -->
    
    <sys:Double x:Key="SpacingXS">4</sys:Double>
    <sys:Double x:Key="SpacingS">8</sys:Double>
    <sys:Double x:Key="SpacingM">12</sys:Double>
    <sys:Double x:Key="SpacingL">16</sys:Double>
    
    <!--
        ========================================================================
        CORNER RADIUS TOKENS
        ========================================================================
        Köşe yuvarlaklığı token'ları - UI elementlerinde tutarlı görünüm.
    -->
    
    <sys:Double x:Key="CornerRadiusSmall">2</sys:Double>
    <sys:Double x:Key="CornerRadiusNormal">4</sys:Double>
    
</ResourceDictionary>

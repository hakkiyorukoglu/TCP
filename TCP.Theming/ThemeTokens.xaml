<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
        ThemeTokens.xaml - Tema token'ları (renk tanımları)
        
        Bu dosya tüm tema renklerinin merkezi tanımlandığı yerdir.
        UI'da hardcoded renk kullanılmamalı, tüm renkler buradan gelmelidir.
        
        Her brush, UI'da kullanılacak semantik bir isimle tanımlanır:
        - BackgroundBrush: Ana arka plan rengi
        - SurfaceBrush: Yüzey/panel arka plan rengi
        - BorderBrush: Kenarlık rengi
        - TextPrimaryBrush: Birincil metin rengi
        - TextSecondaryBrush: İkincil metin rengi
        - AccentBrush: Vurgu/odak rengi
    -->
    
    <!-- Arka plan renkleri -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
    
    <!-- Kenarlık rengi -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
    
    <!-- Metin renkleri -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FFB0B0B0"/>
    
    <!-- Vurgu rengi -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
    
</ResourceDictionary>
